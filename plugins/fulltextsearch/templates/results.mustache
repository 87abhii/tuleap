<div class="search-pane">
    <div class="search-pane-header">{{ project_facets_label }}</div>
    <div class="search-pane-body full-text-search">
        <ul>
            {{# projects_facet }}
            <li class="projects_facet">
                <select id="projects-selection" class="facet select2" multiple name="facets[{{ identifier }}][]" data-placeholder="{{ placeholder }}">
                    {{# option_groups }}
                    <optgroup label="{{ label }}">
                        {{# values }}
                        <option value="{{ value }}" {{# selected }}selected{{/ selected }}>{{ label }} ({{ count }})</option>
                        {{/ values }}
                    </optgroup>
                    {{/ option_groups }}
                </select>
            </li>
            {{/ projects_facet }}
        </ul>
    </div>
</div>

<div class="search-pane">
    <div class="search-pane-header">{{ categories }}</div>
    <div class="search-pane-body full-text-search">
        <ul>
            {{# document_types }}
                <li>
                    <input
                        type="checkbox"
                        class="facet{{# special }} one-project-only{{/ special }}"
                        name="facets[{{ key }}]"
                        value="1"
                        {{^ can_use }} disabled {{/ can_use }}
                        {{# checked }}checked{{/ checked }}
                    />
                    {{ name }}
                    {{# info }}
                        <i class="fa fa-question-circle" title="{{ info }}"> </i>
                    {{/ info }}
                </li>
            {{/ document_types }}
        </ul>
    </div>
</div>

<div class="search-pane">
    <div class="search-pane-header">{{ filter_label }}</div>
    <div class="search-pane-body full-text-search">
        <ul>
            {{# owner_facet }}
            <li>
                <label class="checkbox">
                  <input type="checkbox" class="facet" name="facets[{{ identifier }}]" value="{{ value }}" {{# checked }}checked{{/ checked }}> {{ label }}
                </label>
            </li>
            {{/ owner_facet }}

            {{# update_date_facet }}
            <li>
                <select class="facet" name="facets[{{ identifier }}]">
                <optgroup label="{{ label }}">
                    {{# values }}
                    <option value="{{ value }}" {{# selected }}selected{{/ selected }}>{{ label }}</option>
                    {{/ values }}
                </optgroup>
                </select>
            </li>
            {{/ update_date_facet }}
        </ul>
    </div>
</div>


{{> search-results-main }}

{{# has_results }}
    {{# maybe_more_results }}
        <div id="search-more">
            <button class="btn btn-large" id="search-more-button">{{ more_results }}</button>
        </div>
    {{/ maybe_more_results }}
    <div id="no_more_results" style="display:none;">
        <p><i class="fa fa-frown-o"></i> {{ no_more_results }}</p>
    </div>
{{/ has_results }}
{{^ has_results }}
    <p class="no-result"><i class="fa fa-frown-o"></i> {{{ no_match_found_string }}}</p>
{{/ has_results }}
