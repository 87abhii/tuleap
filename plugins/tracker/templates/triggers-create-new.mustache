{{> trigger-condition-template}}
<div id="trigger_create_new">
    <h4>{{title_new_trigger}}</h4>
    <table >
        <tbody id="trigger_triggering_field_list">
        </tbody>
    </table>
    <div>
        <a href="#add-triggering-field" id="trigger_add_condition">
            <i class="fa fa-plus"></i>
        </a>
    </div>
    <br />
    {{new_trigger_target_intro}}
    <select id="trigger_target_field_name">
        <option selected="selected" value="">{{new_trigger_select_target_field_name}}</option>
    </select>
    {{condition_will_be_set_to}}
    <select id="trigger_target_field_value">
        <option selected="selected" value="">{{new_trigger_select_target_field_value}}</option>
    </select>
    <p>
        <input type="button" value="{{triggers_submit}}" id="trigger_submit_new" />
        <a href="#cancel" id="trigger_add_cancel">{{cancel}}</a>
    </p>
</div>
