<div class="tlp-framed">
    {{# repository_path }}
        <div class="git-repository-path">{{ repository_path }}/</div>
    {{/ repository_path }}
    <h1 class="git-repository-name {{# parent_repository_presenter }}git-repository-forked-name{{/ parent_repository_presenter }}"
        data-test="git_repo_name">
        {{ repository_name }}
    </h1>
    {{# parent_repository_presenter }}
        <div class="git-repository-parent">
            <i class="fa fa-code-fork"></i>
            {{# dgettext }}
                tuleap-git
                | Forked from %s
                | <a href="{{ parent_repository_url }}">{{ parent_repository_name }}</a>
            {{/ dgettext }}
        </div>
    {{/ parent_repository_presenter }}

    {{# gerrit_status_presenter }}
        {{> repository/gerrit-status }}
    {{/ gerrit_status_presenter }}
    <div class="git-repository-actions">
        <div id="git-repository-actions-main-buttons"
             data-repository-id="{{ repository_id }}"
             data-project-id="{{ project_id }}"
             data-is-migrated-to-gerrit="{{ is_migrated_to_gerrit }}"
            {{# parent_repository_presenter }}
                data-parent-repository-id="{{ parent_repository_id }}"
                data-parent-repository-name="{{ parent_repository_name }}"
                data-parent-project-id="{{ parent_project_id }}"
            {{/ parent_repository_presenter }}
        ></div>
        <div class="git-repository-actions-spacer"></div>
        {{# clone_presenter }}
            {{> repository/clone-bar }}
        {{/ clone_presenter }}
        {{^ user_is_anonymous }}
            <form action="{{ fork_url }}" method="POST">
                <input name="action" value="fork_repositories_permissions" type="hidden">
                <input type="hidden" name="repos[]" value="{{ repository_id }}">
                <input type="hidden" name="choose_destination" value="personal">
                <input type="hidden" name="path" value="">
                <button
                    type="submit"
                    class="tlp-button-primary tlp-button-outline git-repository-actions-button"
                >
                    <i class="fa fa-code-fork tlp-button-icon"></i> {{# dgettext }}tuleap-git | Fork{{/ dgettext }}
                </button>
            </form>
        {{/ user_is_anonymous }}
        {{# user_is_admin }}
            <a href="{{ repository_admin_url }}"
               class="tlp-button-primary tlp-button-outline git-repository-actions-button"
               role="button"
            >
                <i class="fa fa-cog tlp-button-icon"></i> {{# dgettext }}tuleap-git | Settings{{/ dgettext }}
            </a>
        {{/ user_is_admin }}
    </div>
</div>

{{> repository/tabs }}
